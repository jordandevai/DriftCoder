{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "DriftCode",
	"version": "0.1.0",
	"identifier": "com.driftcode.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://127.0.0.1:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "DriftCode",
				"width": 1280,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"decorations": true,
				"transparent": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"linux": {
			"appimage": {
				"bundleMediaFramework": false
			}
		}
	}
}
